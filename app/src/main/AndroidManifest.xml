<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pxl.mindshare">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pxl.mindshare.PersonalProgressionActivity"
            android:label="@string/title_activity_patient_progression"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.pxl.mindshare.AddPatientTodoActivity"
            android:label="@string/title_activity_add_patient_todo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pxl.mindshare.PatientProgressionActivity"
            android:label="@string/title_activity_patient_progress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pxl.mindshare.HelpRequestActivity"
            android:label="@string/title_activity_help_request"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pxl.mindshare.PatientCaregiverMatchActivity"
            android:label="@string/title_activity_patient_caregiver_match"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pxl.mindshare.UserLoginActivity"
            android:label="@string/title_activity_user_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pxl.mindshare.PatientListActivity"
            android:label="@string/title_activity_patient_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pxl.mindshare.ConnectCaregiverActivity"
            android:label="@string/title_activity_connect"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pxl.mindshare.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>